[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    migrations,
    instance,
    venv,
    env,
    build,
    dist
ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # E402: module level import not at top of file
    E402,
    # E501: line too long (handled by max-line-length)
    E501
per-file-ignores =
    # F401: imported but unused (ignore in __init__.py files)
    __init__.py: F401
